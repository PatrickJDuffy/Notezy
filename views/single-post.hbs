<div class="container-fluid">

  <div class="container">
    <div id="post-title">
    </div>
  </div>

  <div class="container">
    <div class="well well-xs">
      <div class="row">
        <div class="col-xs-12" id="post-content">
        </div>
      </div>
    </div>
  </div>

  <div class="container hide">
    <h4>Attached Files</h4>
    <div class="list-group" id="post-files">
    </div>
  </div>

  <div class="container col-xs-offset-8" id="post-footer">
  </div>
</div>

<hr>

<div class="container">
  <div class="row col-xs-12">
    <button type="button" class="btn btn-danger" id="btn-count">
      Comments
      <span class="badge badge-light" id="count">0</span>
    </button>
  </div>
</div>

<br>

<div class="continer">
  <div class="row col-sm-8 col-sm-offset-2" id="feedComments">
  </div>

  <div class="row col-xs-10 col-xs-offset-1">
    <form class="form-horizontal" role="form" id="commentForm">
      <div class="row">
        <div class="form-group">
          <div class="col-xs-12">
            <textarea class="form-control required" style="min-width: 100%" rows="2" id="inputComment" placeholder="Got something to add?"
              maxlength="140"></textarea>
            <label id="charRemaining" for="inputComment">140</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-3">
          <!--Camera-->
          <i class="fa fa-camera-retro fa-lg" aria-hidden="true"></i>
        </div>
        <div class="col-xs-3">
          <!--Video-->
          <i class="fa fa-video-camera fa-lg" aria-hidden="true"></i>
        </div>
        <div class="col-xs-3">
          <i class="fa fa-bar-chart fa-lg" aria-hidden="true"></i>
        </div>
        <div class="col-xs-3">
          <a href="#" data-toggle="popover" data-placement="bottom" data-content="Please enter a comment ...">
            <button type="text" class="btn btn-warning">Comment</button>
          </a>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/javascripts/feed.js"></script>
<script src="/javascripts/single-post.js"></script>